{
  "name": "logomesh-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "The foundational monorepo for the LogoMesh C-IDE and AgentX competition entry.",
  "scripts": {
    "build": "pnpm --recursive run build",
    "lint": "eslint packages/**/*.{ts,tsx}",
    "lint:strict": "eslint packages/**/*.{ts,tsx} --max-warnings 0",
    "check:boundaries": "depcruise packages --config .dependency-cruiser.js",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "core": "pnpm --filter @logomesh/core",
    "server": "pnpm --filter @logomesh/server",
    "contracts": "pnpm --filter @logomesh/contracts",
    "frontend": "pnpm --filter @logomesh/frontend"
  },
  "devDependencies": {
    "@types/node": "^20.11.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.4",
    "dependency-cruiser": "^17.1.0",
    "eslint": "^8.57.0",
    "pnpm": "^10.19.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "vitest": "^4.0.4"
  },
  "author": "Josh Hickson",
  "license": "MIT",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "isolated-vm",
      "sqlite3"
    ]
  }
}
