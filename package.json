{
  "name": "logomesh-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "The foundational monorepo for the LogoMesh C-IDE and AgentX competition entry.",
  "packageManager": "pnpm@9.0.6",
  "scripts": {
    "build": "turbo run build",
    "lint": "eslint packages/**/*.{ts,tsx}",
    "lint:strict": "eslint packages/**/*.{ts,tsx} --max-warnings 0",
    "check:boundaries": "depcruise packages",
    "test": "vitest run",
    "contracts": "pnpm --filter @logomesh/contracts",
    "core": "pnpm --filter @logomesh/core",
    "server": "pnpm --filter @logomesh/server",
    "frontend": "pnpm --filter @logomesh/frontend"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.12",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "@vitest/coverage-v8": "^1.6.0",
    "cors": "^2.8.5",
    "dependency-cruiser": "^16.0.0",
    "eslint": "^8.57.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "isolated-vm": "^6.0.2",
    "jsonwebtoken": "^9.0.2",
    "prettier": "^3.2.5",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "supertest": "^7.0.0",
    "turbo": "^2.0.4",
    "typescript": "^5.4.5",
    "ulid": "^2.3.0",
    "vitest": "^1.6.0"
  },
  "author": "Josh Hickson",
  "license": "MIT",
  "pnpm": {
    "overrides": {
      "esbuild": "0.25.0"
    }
  }
}
