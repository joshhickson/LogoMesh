# Server Configuration
PORT=3001
API_BASE_PATH=/api/v1

# JWT Secret
# This should be a long, random string.
# You can generate one with: openssl rand -base64 32
JWT_SECRET=changeme

# Database Configuration
# Use either DB_PATH for SQLite or DATABASE_URL for PostgreSQL
DB_PATH=./data/logomesh.sqlite3
DATABASE_URL=

# Plugin System
PLUGIN_DIR=./plugins

# Logging
LOG_LEVEL=info

# LLM Configuration
DEFAULT_LLM_EXECUTOR=MockLLMExecutor

# VTC Configuration (Vector Translation Core)
ULS_DIMENSION=768

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001/api/v1
