
# Server Configuration
PORT=3001
API_BASE_PATH=/api/v1

# Database Configuration
# Use DATABASE_URL for standard connection strings (e.g., postgresql://user:pass@host:5432/db)
# If DATABASE_URL is set, it will be used instead of DB_PATH.
DATABASE_URL=
DB_PATH=./data/logomesh.sqlite3

# Security - IMPORTANT: Change these for production
JWT_SECRET=your-super-secret-and-long-random-string-that-is-at-least-32-characters

# Plugin System
PLUGIN_DIR=./plugins

# Logging
LOG_LEVEL=info

# LLM Configuration
DEFAULT_LLM_EXECUTOR=MockLLMExecutor

# VTC Configuration (Vector Translation Core)
ULS_DIMENSION=768

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3001/api/v1
