# Sandbox image with pytest pre-installed
# Build: docker build -t logomesh-sandbox:latest -f Dockerfile.sandbox .
FROM python:3.12-slim

# Install pytest and common testing dependencies
RUN pip install --no-cache-dir \
    pytest>=8.0.0 \
    pytest-timeout>=2.0.0 \
    hypothesis>=6.0.0

# Set Hypothesis to use fast profile by default
ENV HYPOTHESIS_PROFILE=fast

# Clean up
RUN apt-get clean && rm -rf /var/lib/apt/lists/*

# Default working directory
WORKDIR /workspace
