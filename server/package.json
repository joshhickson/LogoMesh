{
  "name": "logomesh-server",
  "version": "0.1.0",
  "description": "LogoMesh backend server",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/server.js",
    "dev": "npm run build && node dist/src/server.js",
    "watch": "tsc -w",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:create-migration": "ts-node -r tsconfig-paths/register src/db/create-migration.ts",
    "db:compile-migrations": "tsc -p src/db/migrations/tsconfig.json && echo '{\"type\": \"commonjs\"}' > src/db/migrations/dist/package.json",
    "db:migrate": "npm run db:compile-migrations && node src/db/run-migrations.cjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/pg": "^8.15.4",
    "ajv": "^6.12.6",
    "better-sqlite3": "^12.4.1",
    "multer": "^2.0.2",
    "pg": "^8.16.2",
    "tsconfig-paths": "^3.15.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.2",
    "@types/multer": "^1.4.13",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "express": "^5.1.0",
    "supertest": "^7.1.4",
    "vitest": "^3.1.2"
  }
}
