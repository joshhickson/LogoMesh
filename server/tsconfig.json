{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "..", // Changed to project root /app
    "paths": {
      "sqlite3": ["server/node_modules/sqlite3/lib/sqlite3.js"] // Adjusted for new baseUrl
    }
  },
  "include": [ // These paths are relative to tsconfig.json (server/), but resolve from baseUrl (/app)
    "src/**/*",         // Will resolve to /app/server/src
    "../core/**/*",     // Will resolve to /app/core
    "../contracts/**/*" // Will resolve to /app/contracts
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}