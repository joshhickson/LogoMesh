{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"], // Added "dom"
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "../", // Changed from ./src to one level up (project root)
    "baseUrl": "../",
    "paths": {
      "@core/*": ["core/*"],
      "@contracts/*": ["contracts/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "exactOptionalPropertyTypes": true
  },
  "include": [
    "src",
    "../core",
    "../contracts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}