{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "..",
    "paths": {
      "sqlite3": ["server/node_modules/sqlite3/lib/sqlite3.js"]
    }
  },
  "include": [
    "src/**/*",
    "../core/**/*",
    "../contracts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}