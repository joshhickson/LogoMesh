# AgentBeats MCP Server Dockerfile
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies for MCP server
RUN pip install --no-cache-dir \
    fastmcp>=0.1.0 \
    requests>=2.31.0 \
    httpx>=0.27.0

# Clone just the MCP server file we need
RUN git clone --depth 1 https://github.com/agentbeats/agentbeats.git /tmp/agentbeats && \
    cp /tmp/agentbeats/src/backend/mcp/mcp_server.py /app/ && \
    rm -rf /tmp/agentbeats

# Default environment variables
ENV MCP_PORT=9001
ENV BACKEND_URL=http://localhost:9000
ENV MCP_HOST=0.0.0.0

# Expose MCP port
EXPOSE 9001

# Run the MCP server
CMD python mcp_server.py --mcp_port ${MCP_PORT} --backend_url ${BACKEND_URL} --host ${MCP_HOST}
