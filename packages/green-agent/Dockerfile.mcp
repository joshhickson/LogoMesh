# AgentBeats MCP Server Dockerfile
# This builds the MCP server from the vendor/agentbeats SDK
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies for MCP server
RUN pip install --no-cache-dir \
    fastmcp>=0.1.0 \
    requests>=2.31.0 \
    httpx>=0.27.0

# Copy the MCP server code from agentbeats
# Note: Build context is vendor/agentbeats
COPY src/backend/mcp/mcp_server.py /app/mcp_server.py

# Default environment variables
ENV MCP_PORT=9001
ENV BACKEND_URL=http://agentbeats-backend:9000
ENV MCP_HOST=0.0.0.0

# Expose MCP port
EXPOSE 9001

# Health check - MCP servers respond to /health on their SSE endpoint
HEALTHCHECK --interval=10s --timeout=5s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:${MCP_PORT}/health || exit 1

# Run the MCP server
CMD python mcp_server.py --mcp_port ${MCP_PORT} --backend_url ${BACKEND_URL} --host ${MCP_HOST}
